@using System.Collections.Generic;
@using Oratr.Models;
@model IEnumerable<Speech>

@{
    ViewBag.Title = "Speeches";
}
<!-- FUNCTIONAL-->
<h2>Speeches</h2>

@foreach (var item in Model)
{
    <h4>@item.SpeechTitle</h4>
    @Html.ActionLink("View Details", "Details", new { id = @item.SpeechId })
        <button data-toggle="modal" data-target="#modal-@item.SpeechId">Delete</button>
        <div id="modal-@item.SpeechId" class="modal fade" role="dialog" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">X</button>
                    </div>
                    <div class="modal-body">
                        @Html.ActionLink("Yes?", "Delete", new { id = @item.SpeechId }, new { @class = "btn" })
                        <button class="close" data-dismiss="modal">No!</button>
                    </div>
                    <div class="modal-footer"></div>
                </div>
            </div>
        </div>
}
<div>@Html.ActionLink("Add a Speech", "Create") | @Html.ActionLink("Go Back", "Index")</div>